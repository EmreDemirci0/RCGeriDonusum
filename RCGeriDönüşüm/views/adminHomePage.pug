extends layouts/General-layout.pug 
block content
  style.
    .inputs {
    font-size: 1rem;
    }
    .ad {
    font-size: 12px;
    font-weight: 600;
    }
  body(style="background:rgb(0, 0, 0);")
    section.vh-100
      .container.py-5.h-100
        form.row.d-flex.justify-content-center.align-items-center.h-100( action="/admin/adminHomePage" method="POST")
          p.bg-white.rounded.text-center.FontStuff.FontStufflg.p-3(style="width:98%;" ) Update Item Carbon Amount
          p.bg-white.rounded.text-center.FontStuff(style="width:98%" class=`${successColor}`) #{success}
          each item in items
            .col-12.col-sm-6.col-md-6.col-lg-6.col-xl-3.mt-3
              .card.shadow-2-strong(style='border-radius: 1rem')
                .card-body.p-5.text-center
                  p.form-label.mb-2.buttonFontSize #{item.recyclingtype} 
                  img.img-fluid(src=`/img/${item.itemImg}` alt='...')
                  .form-outline.mb-4
                    p.form-label.mb-2.FontStuff #{item.name}    
                    p.form-label.mb-2.FontStuff.ad.ps-2 Active value(#{item.CarbonQuantity}C)
                    p.form-label.mb-2.FontStuff.ad.ps-2 Enter new value 
                    br 
                    input.form-control.a.form-control-lg.inputs(type='text' name=`${item.name}` placeholder='New Value')          
          button#btn.myButton.btn.btn-light.btn-lg.btn-block.w-100.justify-content-between.mt-3.updateButton(type='submit' name="changeButton" )| Update  
          button#btn.myButton.btn.btn-light.btn-sm.btn-block.justify-content-between.mt-3.mb-3(type='submit' style="width:15%" name="signOutButton" ) Logout 
          label.text-danger(style="border:1px solid black;width:100px height:100px") 
    script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js' integrity='sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js' integrity='sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V' crossorigin='anonymous')
