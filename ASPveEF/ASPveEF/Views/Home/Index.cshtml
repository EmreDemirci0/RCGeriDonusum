
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,300;1,300;1,600&display=swap" rel="stylesheet">
    <style>

        body {
            font-family: 'Roboto Mono', monospace;
            background-color: blue;
        }

        .FontStuff {
            font-weight: bold;
            font-size: 1.1rem;
            letter-spacing: .9px;
        }

        .text-teal {
            color: teal;
        }

        .links {
            font-weight: bold;
            font-size: 1.1rem;
            letter-spacing: .8px;
        }

        .inputs {
            font-style: italic;
        }

        .mainHeader {
            letter-spacing: 1.5px;
            font-weight: bold;
            font-size: 2rem;
        }

        .wrongPassword {
            font-weight: bold;
        }

        .myButton {
            font-weight: bold;
        }

        .buttonFontSize {
            font-size: .85rem;
        }

        .FontStufflg {
            font-size: 1.5rem
        }
    </style>

</head>
<body>
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <h3 class="mb-5 mainHeader">register</h3>
                            <form action="/user/register" method="POST">
                               <!--        yapanlar bilgisi        -->

                                <div class="form-outline mb-4" style="width: 45%; float: left;">
                                    <label class="form-label mb-2 FontStuff" for="typeEmailX-2">Name </label>
                                    <input type="text" class="form-control form-control-lg inputs" placeholder="Name" name="name" />
                                </div>
                                <div class="form-outline mb-4  " style="width:45% ;float:right;">
                                    <label class="form-label mb-2 FontStuff" for="typeEmailX-2"> Surname</label>
                                    <input type="text" class="form-control form-control-lg inputs" placeholder="Surname" name="surname" />
                                </div>
                                <div class="clearfix"></div>

                                <div class="form-outline mb-4 ">
                                    <label class=" form-label mb-2 FontStuff" for="typeEmailX-2">TC</label>
                                    <input type="text" class="form-control form-control-lg inputs" placeholder="TC" name="TC" />
                                </div>
                                <div class="form-outline mb-4 ">
                                    <label class="form-label mb-2 FontStuff">Birth Year</label>
                                    <input type="text" class="form-control form-control-lg inputs" placeholder="BirthYear" name="BirthYear" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label mb-2 FontStuff" for="typeEmailX-2">Email</label>
                                    <input type="email" class="form-control form-control-lg inputs" value="emre@gmail.com" placeholder="Enter mail" name="email" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label mb-2 FontStuff" for="typePasswordX-2">Password</label>
                                    <input type="password" class="form-control form-control-lg inputs" placeholder="Enter Password" name="password" />
                                </div>

                                <button href="/user/login" class="myButton btn btn-primary btn-lg btn-block  w-100 justify-content-between" type="submit">Register</button>
                            </form>
                            <hr class="my-4">
                            <div class="d-flex justify-content-around align-items-center mt-1">
                            
                                <p><a class="links" href="/user/login">Login</a></p>

                            </div>
                            <div>
                                 * Ürünlerimiz @ViewBag.ItemNames'dir.Eğer ürünleriniz varsa kayıt olun.Aksi takdirde üye olmanızın bir mantığı olmaz
                            </div>





                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
</body>
</html>